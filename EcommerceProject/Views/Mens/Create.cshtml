@using EcommerceProject.Data.Enums;
@using EcommerceProject.ViewModels;
@model CreateMensClothViewModel




<form method="Post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Product Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter product Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Price</label>
        <input asp-for="Description" class="form-control" placeholder="Enter price">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Clothing Category</label>
        <select asp-for="Category" asp-items="@Html.GetEnumSelectList(typeof(ClothingCategory))">
            <option>----select-----</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Enter Image description">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>


    <button type="submit" style="margin-top: 15px; background-color:tomato" class="btn btn-primary">Submit</button>
</form>